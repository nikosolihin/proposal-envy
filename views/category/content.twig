<section class="journal-content">
  <div class="row show-for-medium-down journal-select">
    <div class="small-12 columns">
      <h4>Filter By Categories:</h4>
      <select class="category-select">
        <option selected value="{{site.url}}/journal">All</option>
        {% for category in categories %}
        <option {% if chosen_slug == category.slug %}selected{% endif %} value="{{site.url}}/journal/categories/{{category.slug}}">{{category.name}}</option>
        {% endfor %}
      </select>
    </div>
  </div>
  <div class="row max-width journal-latest">
    <div class="large-2 large-offset-1 xlarge-2 xlarge-offset-2 hide-for-medium-down columns sticky-stuff">
      <ul class="side-nav journal-category-nav">
        <h4>Filter By Categories:</h4>
        <li class="journal-category-list">
          <a class="journal-category-link" href="{{site.url}}/journal/">All</a>
        </li>
        {% for category in categories %}
        <li class="journal-category-list{% if chosen_slug == category.slug %} journal-selected{% endif %}">
          <a class="journal-category-link" href="{{site.url}}/journal/categories/{{category.slug}}">{{category.name}}</a>
        </li>
        {% endfor %}
      </ul>
    </div>
    <div class="small-12 large-8 xlarge-6 end columns small-only-text-center text-left journal-list">
      {% for post in posts|slice(0, 15) %}
      <article class="small-12 columns journal-article" style="background-image: url({{post.thumbnail.src}});">
        <a href="{{post.permalink}}">
          <span class="journal-overlay"></span>
          <h4 class="journal-meta">{{post.post_date|date('j M, Y')}} - <span class="coral-meta">{{post.category}}</span></h4>
          <h2 class="journal-title">{{post.title}}</h2>
          <p class="journal-excerpt">{{post.get_field('journal_excerpt')}}</p>
        </a>
      </article>
      {% endfor %}
    </div>
  </div>
</section>


{% for category in settings.get_field('category_bg') %}
  {{category.the_category.slug|print_r}}
  {{TimberImage(category.the_image).src|print_r}}
{% endfor %}


