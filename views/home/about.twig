<section class="about text-center menu-waypoint">
  <div class="row">
    <div class="small-12 columns">
      <div class="title-bold">Indonesia's First Proposal Planner</div>
      <h2>Turning Dreams Into Reality</h2>
      <hr>
      <div class="row">
        <div class="large-8 large-centered columns">
          <p class="gradient-text l-margin">{{post.get_field('info_who')}}</p>
          {% if options.brand_mention|length > 3 %}
            <div class="row">
            {% for brand in options.brand_mention[0:3] %}
              <div class="large-4 end columns brand-top">
                <img src="{{TimberImage(brand.logo).src}}">
              </div>
            {% endfor %}
            </div>
            <div class="row brand-bottom-row">
            {% for brand in options.brand_mention[3:3] %}
              <div class="large-4 end columns brand-bottom">
                <img src="{{TimberImage(brand.logo).src}}">
              </div>
            {% endfor %}
            </div>
          {% else %}
            <div class="row">
            {% for brand in options.brand_mention %}
              <div class="large-4 columns end brand">
                <img src="{{TimberImage(brand.logo).src}}">
              </div>
            {% endfor %}
            </div>
          {% endif %}
          <a href="{{site.url}}/about" class="button coral">Get to know us</a>
        </div>
      </div>
    </div>
  </div>
</section>