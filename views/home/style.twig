  background-image: linear-gradient(rgba({{journal.get_field('post_overlay')|toRGB}},{% if journal.hide_header_text == "yes" %}.8{% else %}0.7{% endif %}), rgba({{journal.get_field('post_overlay')|toRGB}},{% if journal.hide_header_text == "yes" %}.8{% else %}0.7{% endif %})),url({{journal.thumbnail.src}});
}
