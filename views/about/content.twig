<section class="about-value no-padding menu-waypoint">
  <div class="row">
      <div class="title-bold text-center">About Us</div>
      <h2 class="text-center">Who We Are</h2>
      <hr>
    <div class="small-12 medium-7 large-6 large-offset-1 xlarge-5 xlarge-offset-2 columns">
      <div class="title-bold m-margin">{{post.get_field('values_title')}}</div>
      <div>
        {{post.get_field('values_content')}}
      </div>
    </div>
    <div class="small-12 medium-5 large-3 large-offset-1 xlarge-2 end columns">
      <div class="title-bold m-margin">{{post.get_field('services_title')}}</div>
      <div>
        {{post.get_field('services_content')}}
      </div>
    </div>
  </div>
  <div class="row">
    <div class="small-12 columns text-center">
      <a href="{{post.get_field('button_link')}}" class="button coral no-margin l-margin">{{post.get_field('button_text')}}</a>
    </div>
  </div>
</section>

<section class="about-role">
  <div class="row">
    <div class="small-12 columns text-center">
      <div class="title-bold m-margin">Our Role</div>
    </div>
  </div>
  <div class="row">
    <div class="small-10 small-offset-1 medium-6 medium-offset-0 large-4 large-offset-2 columns">
      <p class="white">{{post.get_field('left_paragraph')}}</p>
    </div>
    <div class="small-10 small-offset-1 medium-6 medium-offset-0 large-4 end columns">
      <p class="white">{{post.get_field('right_paragraph')}}</p>
    </div>
  </div>
  <div class="row">
    <div class="small-12 columns text-center">
      <a href="" class="button coral lets-talk no-margin">Let's Talk!</a>
    </div>
  </div>
</section>

<section class="about-brands">
  <div class="row">
    <div class="large-8 large-centered columns text-center">
      <div class="title-bold m-margin">As seen on</div>
      <hr>
      {% if options.brand_mention|length > 3 %}
        <div class="row">
        {% for brand in options.brand_mention[0:3] %}
          <div class="small-8 small-offset-2 medium-4 medium-offset-0 large-4 columns end">
            <a href="{{brand.link}}">
              <img src="{{TimberImage(brand.logo).src}}">
            </a>
          </div>
        {% endfor %}
        </div>
        <div class="row brand-bottom-row">
        {% for brand in options.brand_mention[3:3] %}
          <div class="small-8 small-offset-2 medium-4 medium-offset-0 large-4 columns end">
            <a href="{{brand.link}}">
              <img src="{{TimberImage(brand.logo).src}}">
            </a>
          </div>
        {% endfor %}
        </div>
      {% else %}
        <div class="row">
        {% for brand in options.brand_mention %}
          <div class="small-8 small-offset-2 medium-4 medium-offset-0 large-4 columns end">
            <a href="{{brand.link}}">
              <img src="{{TimberImage(brand.logo).src}}">
            </a>
          </div>
        {% endfor %}
        </div>
      {% endif %}
    </div>
  </div>
</section>

<section class="no-padding">
  <div class="small-12 columns show-for-small-only handy-small"></div>
  <div class="row max-width handy">
    <div class="medium-6 medium-offset-0 large-5 large-offset-2 white-panel columns">
      <div class="title-bold s-margin">{{post.get_field('handy_title')}}</div>
      <h3 class="m-margin">{{post.get_field('handy_name')}}</h3>
      <hr>
      <p class="gray">{{post.get_field('handy_bio')}}</p>
    </div>
  </div>
  <div class="small-12 columns show-for-small-only arista-small"></div>
  <div class="row max-width arista">
    <div class="medium-6 medium-offset-6 large-5 large-offset-5 white-panel columns">
      <div class="title-bold s-margin">{{post.get_field('arista_title')}}</div>
      <h3 class="m-margin">{{post.get_field('arista_name')}}</h3>
      <hr>
      <p class="gray">{{post.get_field('arista_bio')}}</p>
    </div>
  </div>
</section>