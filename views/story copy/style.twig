.story-wrap {
  background-image: linear-gradient(rgba({{post.get_field('story_color')|toRGB}},0.50),rgba({{post.get_field('story_color')|toRGB}},0.40)),url({{post.thumbnail.src}});
}
.story-content, .story-share {
  background-color: {{ (post.get_field('story_bg_color') == "ivory") ? '#fffefb' : '#ffffff'}};
}
p a, p a:hover, p a:focus {
  color: {{post.get_field('story_color')}};
}
.excerpt {
  color: {{post.get_field('story_color')}};
}
blockquote {
  border-left: 8px solid rgba({{post.get_field('story_color')|toRGB}},0.2);
  background-color: rgba({{post.get_field('story_color')|toRGB}},0.02);
}
blockquote p {
  color: rgba({{post.get_field('story_color')|toRGB}},0.75);
}
.story-carousel, .slick-track {
  height: {% if post.get_field('story_gallery_height') %} {{post.get_field('story_gallery_height')}}px; {% else %} 400px; {% endif %};
}
.story-next {
    background-image: linear-gradient(rgba({{post.next.get_field('story_color')|toRGB}},0.50),rgba({{post.next.get_field('story_color')|toRGB}},0.50)),url({{post.next.thumbnail.src}});
}
.story-prev {
    background-image: linear-gradient(rgba({{post.prev.get_field('story_color')|toRGB}},0.50),rgba({{post.prev.get_field('story_color')|toRGB}},0.50)),url({{post.prev.thumbnail.src}});
}
table tr:nth-child(even) {background: rgba({{post.get_field('story_color')|toRGB}},0.04);}
table thead {background: rgba({{post.get_field('story_color')|toRGB}},0.07);}