header {
  background-image: linear-gradient(rgba({{post.get_field('post_overlay')|toRGB}},{% if post.hide_header_text == "yes" %}0{% else %}0.50{% endif %}),rgba({{post.get_field('post_overlay')|toRGB}},{% if post.hide_header_text == "yes" %}0{% else %}0.40{% endif %})),url({{post.thumbnail.src}});
}
.story-content, #story-jump {
  background-color: {{ (post.get_field('post_bg_color') == "ivory") ? '#fffefb' : '#ffffff'}};
}
.story-comments {
  background-color: {{ (post.get_field('post_bg_color') == "ivory") ? '#ffffff' : '#fffefb'}};
}
p a, p a:hover, p a:focus, .excerpt, .author-name, .cta a {
  color: {{post.get_field('post_color')}};
}
blockquote {
  border-left: 8px solid rgba({{post.get_field('post_color')|toRGB}},0.2);
}
blockquote p {
  color: rgba({{post.get_field('post_color')|toRGB}},0.9);
}
blockquote, .author-meta, .horz-spotlight {
  background-color: rgba({{post.get_field('post_color')|toRGB}},0.02);
}
{# #slideshow, .slick-track {
  height: {% if post.get_field('story_gallery_height') %} {{post.get_field('story_gallery_height')}}px; {% else %} 450px; {% endif %};
} #}
.story-next {
    background-image: linear-gradient(rgba({{post.next.get_field('post_overlay')|toRGB}},0.50),rgba({{post.next.get_field('post_overlay')|toRGB}},0.50)),url({{post.next.thumbnail.src}});
}
.story-prev {
    background-image: linear-gradient(rgba({{post.prev.get_field('post_overlay')|toRGB}},0.50),rgba({{post.prev.get_field('post_overlay')|toRGB}},0.50)),url({{post.prev.thumbnail.src}});
}
table tr:nth-child(even) {background: rgba({{post.get_field('post_color')|toRGB}},0.04);}
table thead {background: rgba({{post.get_field('post_color')|toRGB}},0.07);}
.author-photo {
  background-image: url({{TimberImage(spotlight.get_field('photo')).src}});
}
.post-set {
  background-color: rgba({{post.get_field('post_color')|toRGB}},0.9);
}