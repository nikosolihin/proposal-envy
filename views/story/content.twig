<section class="story-content">
  {% if post.get_field('story_excerpt') is not empty %}
    <div class="row max-width">
      <div class="little-nav small-12 medium-2 large-3 xlarge-4 text-right hide-for-small-only columns">
        <a href="{{site.url}}/{{post_type|lower}}/" class="all-posts">
          <i class="icon-left-dir"></i>
          All {{post_type}}
        </a>
      </div>
      <div class="small-12 medium-8 large-6 xlarge-4 end columns">
        <p class="excerpt">{{post.get_field('story_excerpt')}}</p>
      </div>
    </div>
    <div class="row max-width entry-content">
      <div class="small-12 medium-8 medium-offset-2 large-6 large-offset-3 xlarge-4 xlarge-offset-4 columns">
        {{post.content}}
        <ul id="tiles">
          {% for gallery_img in gallery_imgs %}
            <li class="item" data-src="{{gallery_img | last}}">
              <img src="{{gallery_img | first}}" alt="">
            </li>
          {% endfor %}
        </ul>
      </div>
    </div>
  {% else %}
    <div class="row max-width entry-content">
      <div class="little-nav small-12 medium-2 large-3 xlarge-4 text-right hide-for-small-only columns">
        <a href="{{site.url}}/{{post_type|lower}}/" class="all-posts">
          <i class="icon-left-dir"></i>
          All {{post_type}}
        </a>
      </div>
      <div class="small-12 medium-8 large-6 xlarge-4 end columns">
        {{post.content}}
      </div>
    </div>
    <div class="row">
      <div class="small-12 columns">
        <ul id="tiles">
          {% for gallery_img in gallery_imgs %}
            <li data-src="{{gallery_img | last}}">
              <img src="{{gallery_img | first}}" alt="">
            </li>
          {% endfor %}
        </ul>
      </div>
    </div>
  {% endif %}
</section>