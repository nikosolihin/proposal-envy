<section class="packages-summary show-for-small-only">
  <div class="row">
    <div class="small-12 columns text-center">
      <p class="white">{{post.get_field('sentence')}}</p>
    </div>
  </div>

  <div class="row black-panel">
    <div class="small-10 small-centered columns">
      <div class="row">
      {% for package in packages|slice(0,4) %}
      {% set index = loop.index0 %}
        <div class="small-6 end columns text-center">
          <div class="title-bold white packages-tab packages-tab-{{index}}">
            <a href="#" class="white packages-select-link">{{package.name}}</a>
          </div>
        </div>
      {% endfor %}
      {% for package in packages|slice(4,1) if packages|length > 4 %}
        <div class="small-12 end columns text-center">
          <div class="title-bold white packages-tab packages-tab-4">
            <a href="#" class="white packages-select-link">{{package.name}}</a>
          </div>
        </div>
      {% endfor %}
      </div>
    </div>
  </div>

  {% for package in packages %}
  {% set index = loop.index0 %}
  <div class="row packages-{{index}} packages-detail-mobile packages-mobile-waypoint black-panel">
    <div class="small-12 small-centered columns text-center">
      <h2 class="white">{{package.name}}</h2>
      <hr>
      <div class="white text-left">
        {{package.description}}
      </div>
    </div>
  </div>
  {% endfor %}

  <div class="row">
    <div class="small-12 columns text-center">
      {# <a href="#" class="packages-open button no-margin">Expand</a> #}
      <a href="#" class="packages-book button no-margin">Book Now</a>
    </div>
  </div>
</section>

<section class="packages-table show-for-medium-up">
  <div class="row">
    <div class="small-12 large-10 xlarge-8 small-centered columns">
      <div class="title-bold text-center white">{{post.get_field('tagline')}}</div>
      <h2 class="text-center white l-margin">{{post.get_field('title')}}</h2>
      <p class="white text-center m-margin">{{post.get_field('sentence')}}</p>
      <table class="packages-table-menu">
        <thead>
          <tr>
            <th></th>
            {% for package in packages %}
              <th class="title-bold">{{package.name}}</th>
            {% endfor %}
          </tr>
        </thead>
        <tbody>
          {% for row in rows %}
          <tr>
            <th class="title-lower">{{row.title}}</th>
            {% set index = loop.index0 %}
            {% for column in columns[index] %}
              <td>{{column}}</td>
            {% endfor %}
          </tr>
          {% endfor %}
          <tr id="packages-detail-jump">
            <th></th>
            {% for package in packages %}
            {% set index = loop.index0 %}
              <td><a href="" class="package-{{index}} button no-margin">Details</a></td>
            {% endfor %}
          </tr>
          <tr class="packages-expand">
            <td colspan="{{packages|length+1}}">
              {% for package in packages %}
              {% set index = loop.index0 %}
              <div class="row package-{{index}}-details packages-details">
                <div class="medium-10 large-8 columns small-centered text-left">
                  <div class="title-bold white m-margin">{{package.name}}</div>
                  <div>
                    {{package.description}}
                  </div>
                  <a href="#" class="book button no-margin">Book Now</a>
                </div>
              </div>
              {% endfor %}
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</section>

<section class="packages-insight">
  <div class="row">
    <div class="small-12 medium-6 medium-offset-1 xlarge-4 xlarge-offset-2 end columns white">
      <div class="title-bold text-left white m-margin">Envious Insights</div>
      <p>{{post.get_field('insights_description')}}</p>
    </div>
    <div class="small-12 medium-4 end columns text-center">
      <img class="insight-img" src="{{TimberImage(post.get_field('icon')).src}}" />
    </div>
  </div>
</section>

<section class="packages-faq">
  <div class="row">
    <div class="small-12 large-10 large-offset-1 xlarge-8 xlarge-offset-2 columns">
      <div class="title-bold text-center">{{post.get_field('faq_tagline')}}</div>
      <h2 class="text-center">{{post.get_field('faq_title')}}</h2>
      <hr>
      <div class="row">
        <div class="small-12 large-6 columns">
          <ul>
            {% for qna in post.get_field('faq')|slice(0,post.get_field('faq')|length/2|round) %}
              <li class="qna">
                <p class="question title-lower no-spacing">{{qna.question}}</p>
                <div class="answer">{{qna.answer}}</div>
              </li>
            {% endfor %}
          </ul>
        </div>
        <div class="small-12 large-6 columns">
          <ul>
            {% for qna in post.get_field('faq')|slice(post.get_field('faq')|length/2|round, post.get_field('faq')|length) %}
              <li class="qna">
                <p class="question title-lower no-spacing">{{qna.question}}</p>
                <div class="answer">{{qna.answer}}</div>
              </li>
            {% endfor %}
          </ul>
        </div>
     </div>
    </div>
  </div>
</section>