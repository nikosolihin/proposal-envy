<section class="menu-waypoint">
  <div class="row stories-success">
    {% for post in success %}
      <article class="small-12 medium-4 columns end text-center post-article">
        <a href="{{post.permalink}}">
          <div class="post-image-success" style="background-image: linear-gradient(rgba(0,0,0,0.20),rgba(0,0,0,0.20)), url({{post.thumbnail.src}})">
            <h3 class="white post-title-success">{{post.title}}</h3>
            <div class="white title post-place-success">{{post.get_field('story_place_name')}}</div>
          </div>
        </a>
      </article>
    {% endfor %}
  </div>
  <div class="row stories-latest">
    {% for post in recent %}
      <article class="small-12 medium-4 large-3 columns end post-article">
        <a href="{{post.permalink}}">
          <div class="post-image" style="background-image: url({{post.thumbnail.src}})"></div>
          <div class="post-info">
            <h3 class="post-title">{{post.title}}</h3>
            <div class="title">{{post.get_field('story_place_name')}}</div>
          </div>
        </a>
      </article>
    {% endfor %}
  </div>
</section>