<section class="stories-content">
  <div class="row">
    <div class="small-12 columns">
      <div class="row">
        {% for post in success %}
          <article class="small-12 medium-4 columns end post-article">
            <a href="{{post.permalink}}">
              <div class="post-image" style="background-image: url({{post.thumbnail.src}})">
                <h2>{{post.title}}</h2>
                <h5>{{post.get_field('story_place_name')}}</h5>
              </div>
            </a>
          </article>
        {% endfor %}
      </div>
      <div class="row stories-latest">
        <div class="row">
          {% for post in recent %}
            <article class="small-12 medium-4 large-3 columns end post-article">
              <a href="{{post.permalink}}">
                <div class="post-image" style="background-image: url({{post.thumbnail.src}})">
                </div>
                <div class="post-info">
                  <h2>{{post.title}}</h2>
                  <h5>{{post.get_field('story_place_name')}}</h5>
                </div>
              </a>
            </article>
          {% endfor %}
        </div>
      </div>
    </div>
  </div>
</section>