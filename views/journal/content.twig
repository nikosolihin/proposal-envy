<section class="journal-content">
  <div class="row show-for-medium-down journal-select">
    <div class="small-12 columns">
      <h4>Filter By Categories:</h4>
      <select class="category-select">
        <option selected value="{{site.url}}/journal">All</option>
        {% for category in categories %}
        <option value="{{site.url}}/journal/categories/{{category.slug}}">{{category.name}}</option>
        {% endfor %}
      </select>
    </div>
  </div>
  <div class="row journal-latest">
    <div class="large-2 hide-for-medium-down columns">
      <ul class="side-nav journal-category-nav">
        <h4>Filter By Categories:</h4>
        <li class="journal-category-list journal-selected">
          <a class="journal-category-link" href="{{site.url}}/journal/">All</a>
        </li>
        {% for category in categories %}
        <li class="journal-category-list">
          <a class="journal-category-link" href="{{site.url}}/journal/categories/{{category.slug}}">{{category.name}}</a>
        </li>
        {% endfor %}
      </ul>
    </div>
    <div class="small-12 large-10 columns journal-list">
      <h2>{{chosen_name}}</h2>
      {% for post in posts|slice(0, 6) %}
      <article class="small-12 large-6 xlarge-4 columns post-article">
        <a href="{{post.permalink}}">
          <div class="row">
            <div class="post-image small-3 medium-4 columns" style="background-image: url({{post.thumbnail.src}})"></div>
            <div class="post-info small-9 medium-8 columns">
              <h4>{{post.title}}</h4>
              <p>{{post.get_field('journal_excerpt')|excerpt(10)}}</p>
            </div>
          </div>
        </a>
      </article>
      {% endfor %}
      <ul class="post-list">
        {% for post in posts|slice(5, length) %}
          <li class="small-12 columns">
            <a href="{{post.permalink}}" class="row">
              <span class="post-date small-12 medium-3 large-2 columns">{{post.post_date|date('F j, Y')}}</span>
              <span class="post-title small-12 medium-9 large-10 columns">{{post.title}}</span>
            </a>
          </li>
        {% endfor %}
      </ul>
    </div>
  </div>
</section>