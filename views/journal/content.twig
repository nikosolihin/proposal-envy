  <div class="row show-for-small-only journal-select">
    <div class="small-12 columns">
      <h4>Filter By Categories:</h4>
      <select class="category-select">
        <option value="{{site.url}}/journal">All</option>
        {% for category in categories %}
        <option value="{{site.url}}/journal/categories/{{category.slug}}">{{category.name}}</option>
        {% endfor %}
      </select>
    </div>
  </div>
